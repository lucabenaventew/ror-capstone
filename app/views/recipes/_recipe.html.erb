<div class="recipe_form_container">
  <%= form_for @recipe, url: recipes_path, method: :post, html: { class: 'recipe_form' } do |f| %>
    <%= f.label :name, class: "form_field_label" %>
    <%= f.text_field :name, class: 'form_field' %>
    <%= f.label :preparation_time, class: "form_field_label" %>
    <%= f.text_field :preparation_time, class: 'form_field' %>
    <%= f.label :cooking_time, class: "form_field_label" %>
    <%= f.text_field :cooking_time, class: 'form_field' %>
    <%= f.label :description, class: "form_field_label" %>
    <%= f.text_area :description, class: 'form_area_field' %>
    <%= f.submit "Submit", class: "recipe_form_submit_btn" %>
  <% end %>
</div>